<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <View
           android:id="@+id/rectangle_3"
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:layout_alignParentLeft="true"
           android:layout_marginLeft="-50dp"
           android:layout_alignParentTop="true"
           android:layout_marginTop="-14dp"
           android:background="@drawable/circle_green1"
           />

       <View
           android:id="@+id/rectangle_4"
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:layout_marginTop="-54dp"
           android:background="@drawable/circle_yellow1"
           />

       <ImageView
           android:id="@+id/logo"
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="100dp"
           android:src="@drawable/logo_mix" />

       <TextView
           android:id="@+id/text_head"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/logo"
           android:layout_marginTop="10dp"
           android:fontFamily="@font/montserrat_bold"
           android:gravity="center"
           android:text="Miss Caddie"
           android:textColor="@color/black"
           android:letterSpacing="0.08"
           android:textSize="20sp"
           android:textStyle="bold" />

       <TextView
           android:id="@+id/text_simple"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Are you a Golfer? We can help you discover your favorite caddie!"
           android:textAppearance="@style/text"
           android:lineSpacingExtra="6sp"
           android:letterSpacing="0.02"
           android:translationY="-2.97sp"
           android:layout_marginStart="20dp"
           android:layout_marginTop="35dp"
           android:layout_marginEnd="20dp"
           android:layout_marginBottom="10dp"
           android:textColor="@color/black"
           android:textSize="18sp"
           android:fontFamily="@font/roboto"
           android:layout_below="@+id/text_head"
           android:gravity="center_horizontal|top"
           />

       <TextView
           android:id="@+id/golfer_btn"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/text_simple"
           android:layout_marginStart="20dp"
           android:layout_marginTop="10dp"
           android:layout_marginEnd="20dp"
           android:layout_marginBottom="20dp"
           android:background="@drawable/shape_green"
           android:elevation="10dp"
           android:gravity="center"
           android:padding="10dp"
           android:text="GOLFER"
           android:textColor="@color/white"
           android:textSize="20sp"
           android:textStyle="bold" />

       <View
           android:id="@+id/view_main"
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_below="@+id/golfer_btn"
           android:layout_marginLeft="20dp"
           android:layout_marginTop="10dp"
           android:layout_marginRight="20dp"
           android:layout_marginBottom="10dp"
           android:background="#1F000000" />

       <TextView
           android:id="@+id/text_simple2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Are you a Caddie? Share your golf services and get booked now!"
           android:textAppearance="@style/text"
           android:lineSpacingExtra="6sp"
           android:letterSpacing="0.02"
           android:translationY="-2.97sp"
           android:layout_marginStart="20dp"
           android:layout_marginTop="35dp"
           android:layout_marginEnd="20dp"
           android:layout_marginBottom="10dp"
           android:textColor="@color/black"
           android:textSize="18sp"
           android:fontFamily="@font/roboto"
           android:layout_below="@+id/view_main"
           android:gravity="center_horizontal|top"
           />

       <TextView
           android:id="@+id/caddie_btn"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/text_simple2"
           android:layout_marginStart="20dp"
           android:layout_marginTop="10dp"
           android:layout_marginEnd="20dp"
           android:layout_marginBottom="20dp"
           android:background="@drawable/shape_yellow"
           android:elevation="10dp"
           android:gravity="center"
           android:padding="10dp"
           android:textColor="@color/white"
           android:text="CADDIE"
           android:textSize="20sp"
           android:textStyle="bold" />

   </RelativeLayout>
</ScrollView>