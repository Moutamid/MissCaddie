<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUp_Caddie">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/top_yellow"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="100dp"
                    android:src="@drawable/logo_yellow" />

                <TextView
                    android:id="@+id/text_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Miss Caddie"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_simple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_head"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="Sign up"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_simple"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:text="First Name"
                    android:textColor="@color/yellow" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name1_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t1">

                    <EditText
                        android:id="@+id/name1_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_white"
                        android:hint="Enter First Name"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="#808080" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name1_layout"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:text="Second Name"
                    android:textColor="@color/yellow" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name2_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t2">

                    <EditText
                        android:id="@+id/name2_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_white"
                        android:hint="Enter Second Name"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="#808080" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name2_layout"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:text="Email"
                    android:textColor="@color/yellow" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name3_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t3">

                    <EditText
                        android:id="@+id/name3_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_white"
                        android:hint="Name Email"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textColorHint="#808080" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/t4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name3_layout"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:text="Password"
                    android:textColor="@color/yellow" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name4_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/yellow"
                    android:layout_below="@id/t4">

                    <EditText
                        android:id="@+id/name4_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_white"
                        android:hint="Enter Password"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="#808080" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/t5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name4_layout"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:text="Confirm Password"
                    android:textColor="@color/yellow" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name5_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/yellow"
                    android:layout_below="@id/t5">

                    <EditText
                        android:id="@+id/name5_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_white"
                        android:hint="Enter Confirm Password"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="#808080" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/layout_texts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name5_layout"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I agree to "
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terms of Services "
                        android:textColor="@color/yellow"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="and "
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privacy Policy "
                        android:textColor="@color/yellow"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/signUpBtn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_texts"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/shape_yellow"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="SIGN UP"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>