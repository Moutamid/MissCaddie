<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_golfer"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/logo_green" />

        <TextView
            android:id="@+id/name_golfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@+id/img_golfer"
            android:fontFamily="@font/roboto"
            android:letterSpacing="0.05"
            android:text="Andrea Carl"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price_golfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/name_golfer"
            android:fontFamily="@font/roboto"
            android:letterSpacing="0.05"
            android:text="(US$65)"
            android:layout_marginLeft="3dp"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status_golfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/price_golfer"
            android:fontFamily="@font/roboto"
            android:letterSpacing="0.05"
            android:text="(Declined)"
            android:layout_marginLeft="3dp"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_charm_tick1"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/length_golfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_marginLeft="12dp"
                android:text="5th Oct - 15 Oct"
                android:layout_marginTop="5dp"
                android:layout_below="@id/name_golfer"
                android:layout_toEndOf="@id/img_golfer"
                android:textColor="@color/grey" />

        <TableLayout
            android:id="@+id/reviews_golfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/length_golfer"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/img_golfer">
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:layout_marginRight="15dp"
                    android:text="\u2022" />
                <TextView
                    android:layout_column="2"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:text="Ride Along ($80)"></TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:layout_marginRight="3dp"
                    android:text="\u2022" />
                <TextView
                    android:layout_column="2"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:text="Caddie Party ($150)"></TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:layout_marginRight="3dp"
                    android:text="\u2022"/>
                <TextView
                    android:layout_column="2"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:text="more"></TextView>
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/reviews_golfer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:layout_below="@+id/reviews_golfer"
            android:layout_toEndOf="@id/img_golfer"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:text="Dean St, Brooklyn, NY, USA" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>