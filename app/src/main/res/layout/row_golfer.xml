<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_golfer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/logo_green"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_golfer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Andrea Carl"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/length_golfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="170 cm"
                    android:textColor="#878787"
                    android:textSize="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" · "
                    android:textColor="#878787"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/catagory_golfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium"
                    android:textColor="#878787"
                    android:textSize="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" · "
                    android:textColor="#878787"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/place_golfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dubai"
                    android:textColor="#878787"
                    android:textSize="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/stars"/>

                <TextView
                    android:id="@+id/reviews_golfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7 reviews"
                    android:layout_margin="5dp"
                    android:textColor="#878787"
                    android:textSize="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tick"/>

                <TextView
                    android:id="@+id/status_golfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Willing to travel"
                    android:layout_margin="5dp"
                    android:textColor="#878787"
                    android:textSize="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/price_golfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="US$65"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="18sp"/>

    </LinearLayout>
</RelativeLayout>