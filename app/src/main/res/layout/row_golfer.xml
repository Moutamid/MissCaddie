<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_golfer"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/logo_green" />

        <TextView
            android:id="@+id/name_golfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@+id/img_golfer"
            android:fontFamily="@font/roboto"
            android:letterSpacing="0.05"
            android:text="Andrea Carl"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price_golfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/roboto"
            android:letterSpacing="0.05"
            android:text="US$65"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_golfer"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/img_golfer"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/length_golfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="@color/grey"
                android:text="177cm" />

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/circle_yellow1"
                android:layout_marginLeft="6dp"
                android:backgroundTint="@color/grey"
                android:layout_marginRight="6dp" />

            <TextView
                android:id="@+id/catagory_golfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="@color/grey"
                android:text="Beginner" />

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/circle_yellow1"
                android:backgroundTint="@color/grey"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp" />

            <TextView
                android:id="@+id/place_golfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="@color/grey"
                android:text="New York" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rating_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_layout"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/img_golfer"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/start1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_single_star"/>
                <ImageView
                    android:id="@+id/start2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_single_star"/>
                <ImageView
                    android:id="@+id/start3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_single_star"/>
                <ImageView
                    android:id="@+id/start4"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_single_star"/>
                <ImageView
                    android:id="@+id/start5"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_single_star"/>

            </LinearLayout>

            <TextView
                android:id="@+id/reviews_golfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"
                android:fontFamily="@font/roboto"
                android:text="7 reviews" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/willing_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_layout"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/img_golfer"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_charm_cross" />

            <TextView
                android:id="@+id/status_golfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"
                android:fontFamily="@font/roboto"
                android:text="Willing to travel" />

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>