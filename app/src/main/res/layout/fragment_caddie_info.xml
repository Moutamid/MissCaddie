<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.CaddieInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:id="@+id/layout1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Height"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/height"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="177cm"
            android:gravity="end"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black_light"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:layout_below="@+id/layout1"
        android:id="@+id/layout2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Location"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Dean St, Brooklyn, NY, USA"
            android:gravity="end"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black_light"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:layout_below="@+id/layout2"
        android:id="@+id/layout3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Willing to travel"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Willing_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:src="@drawable/ic_charm_cross" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:textColor="@color/black"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:layout_below="@+id/layout3"
        android:id="@+id/layout4"
        android:fontFamily="@font/roboto"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/about_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="normal"
        android:fontFamily="@font/roboto"
        android:text="@string/long_lorem"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/layout4"
        android:layout_marginRight="12dp"
        android:lineHeight="25dp" />

    <TextView
        android:id="@+id/contact_caddie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_green"
        android:elevation="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Ask Caddie A Question"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>